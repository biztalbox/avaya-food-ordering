# Base URL for the application
# This should match your WordPress installation path
# For development, leave empty or use "/"
# For production, use the full path like "/online-order"
VITE_BASE_URL=/online-order

# Menu API endpoint (relative or absolute)
# Example (prod): /online-order/api/fetchMenu.php
# Example (absolute): https://avayacafe.com/online-order/api/fetchMenu.php
VITE_MENU_API_URL=/online-order/api/fetchMenu.php

# Petpooja API endpoint for saving orders
VITE_API_BASE_URL=https://pponlineordercb.petpooja.com/save_order

# Petpooja API credentials
VITE_ACCESS_TOKEN=your_access_token_here
VITE_APP_KEY=your_app_key_here
VITE_APP_SECRET=your_app_secret_here

# Dev proxy target (only used by Vite dev server; avoids CORS)
# VITE_API_PROXY_TARGET=https://avayacafe.com

# Optional: filter menu by restaurant_id
# VITE_RESTAURANT_ID=4922

# API Base URL (optional - for other endpoints)
# VITE_API_BASE_URL=/online-order/api
